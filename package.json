{
  "name": "ai-pipeline",
  "version": "1.0.0",
  "description": "Multi-agent AI coding pipeline: task → code → review → test → merge",
  "type": "module",
  "bin": {
    "ai-pipeline": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:web",
    "build:server": "tsc",
    "build:web": "vite build --config web/vite.config.ts",
    "dev": "tsc --watch",
    "dev:web": "vite --config web/vite.config.ts",
    "start": "node dist/index.js",
    "start:ui": "node dist/index.js serve --host localhost --port 3001"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "glob": "^11.0.1",
    "h3": "^2.0.1-rc.14",
    "ora": "^8.1.1",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "typescript": "^5.7.0",
    "vite": "^6.4.1",
    "vue": "^3.5.28",
    "vue-router": "^4.6.4"
  }
}
